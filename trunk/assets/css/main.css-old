.topbar p {
    color: #BFBFBF;
}

form em {
    color: #CE0000;
    font-size: 11px;
    font-style: normal;
    font-weight: normal;
}

form table td ,.modal-body table td{
    border: 0;
}

.notice {
    color: #CE0000;
    display: block;
    clear: both;
    font-size: 9px !important;
    width: 200px;
    text-align: right;
}

label{
    width: 200px;
}

table tbody th{
    border : 0;
}


.data_list tbody tr{
    cursor: pointer;
}

.centered{
    margin: 0 auto;
}

.btn.small {
    font-size: 11px;
    padding: 5px 7px 6px;
}

#login form{
    margin: 0;
}


#login label, #login .notice {
    margin: 10px;
    text-align: left;
}

#login.modal{
    width: 352px; 
    margin-left:-200px;
}

#login table{
    margin: 0;

}


#login table td{
    padding: 4px;
}

#login .modal-body{
    padding: 5px;
}

/*form login*/
input, textarea, select, .uneditable-input {
    margin-bottom: 4px;
}
/*END*/

.data_list .label {
    font-weight: normal;
    font-size: 9px !important;
    background-color: #F7F7F9;
    color: #999999;
    text-shadow : none;
    border: 1px solid #DDDDDD;
}

.data_list a {
    font-size: 10px !important;
    text-decoration: none;
}

.badge {
    background-color: #FFFFFF;
    border: 1px solid #DDE0E5;
    border-radius: 2px 2px 2px 2px;
    color: #909397;
    display: inline-block;
    font-size: 11px;
    font-weight: normal;
    height: 12px;
    line-height: 11px;
    padding: 0 2px;
    text-align: center;
    vertical-align: middle;
}
.pagination {
    margin: 0 18px 18px 0;
}
